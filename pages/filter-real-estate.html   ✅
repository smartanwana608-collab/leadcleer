      <div class="info-item" id="columnCount">Columns detected: —</div>
    </div>
  </div>

  <!-- PREVIEW -->
  <div class="card">
    <h2>CSV Preview</h2>
    <p>Showing first 5 rows.</p>

    <div class="table-wrapper">
      <table id="previewTable"></table>
